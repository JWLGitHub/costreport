<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
                http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd">


    <context:annotation-config />

    <!-- Component scan to find all Spring components -->
    <context:component-scan base-package="jwl.prp.retiree.costreport" />

    <!-- Link to Application Properties location -->
    <context:property-placeholder location="classpath:application.properties" />

    <!-- Data source - connect to a MySQL instance running on the local machine -->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${database.driver.class.name}"/>
        <property name="url"             value="${database.url}"/>
        <property name="username"        value="${database.user.name}"/>
        <property name="password"        value="${database.password}"/>
    </bean>

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>


    <!-- Drop / Create Spring Batch job-meta tables automatically -->
    <!--
    <jdbc:initialize-database data-source="dataSource">
        <jdbc:script location="org/springframework/batch/core/schema-drop-mysql.sql" />
        <jdbc:script location="org/springframework/batch/core/schema-mysql.sql" />
    </jdbc:initialize-database>
    -->

    <!-- Job Repository: used to persist the state of the batch job -->
    <!--
    <bean id="jobRepository" class="org.springframework.batch.core.repository.support.MapJobRepositoryFactoryBean">
        <property name="transactionManager" ref="transactionManager" />
    </bean>
    -->


    <bean id="jobRepository" class="org.springframework.batch.core.repository.support.JobRepositoryFactoryBean">
        <property name="dataSource"         ref="dataSource" />
        <property name="transactionManager" ref="transactionManager" />
    </bean>

    <!-- Job Launcher: creates the job and the job state before launching it -->
    <bean id="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
        <property name="jobRepository" ref="jobRepository" />
    </bean>


    <!--                              -->
    <!--          Decider(s)          -->
    <!--                              -->

    <!-- Import File(s) Decider -->
    <bean id="importFilesDecider" class="jwl.prp.retiree.costreport.decider.ImportFiles">
        <property name="importDirectory"     value="${cost.report.import.directory}" />
    </bean>


    <!--                              -->
    <!--          Tasklet(s)          -->
    <!--                              -->

    <!-- File Exists Tasklet -->
    <bean id="fileExistsTasklet" class="jwl.prp.retiree.costreport.tasklet.FileExists">
        <property name="rdsFileDAO"        ref="rdsFileDAO"/>
        <property name="fileErrDAO"        ref="fileErrDAO"/>
    </bean>

    <!-- File Empty Tasklet -->
    <bean id="fileEmptyTasklet" class="jwl.prp.retiree.costreport.tasklet.FileEmpty">
        <property name="rdsFileDAO"        ref="rdsFileDAO"/>
        <property name="fileErrDAO"        ref="fileErrDAO"/>
    </bean>

    <!-- File Name Valid Tasklet -->
    <bean id="fileNameValidTasklet" class="jwl.prp.retiree.costreport.tasklet.FileNameValid">
        <property name="rdsFileDAO"        ref="rdsFileDAO"/>
        <property name="fileErrDAO"        ref="fileErrDAO"/>

        <!-- File Name Validator(s) -->
        <property name="fileNameValidators">
            <list>
                <ref bean="fileNameIsValid"/>
                <ref bean="fileNameSubmitterExists"/>
            </list>
        </property>
    </bean>

    <!-- Move Good File Tasklet -->
    <bean id="moveGoodFileTasklet" class="jwl.prp.retiree.costreport.tasklet.MoveFile">
        <property name="outputFileDirectory"  value="${cost.report.good.file.directory}" />
    </bean>

    <!-- Move Bad File Tasklet -->
    <bean id="moveBadFileTasklet" class="jwl.prp.retiree.costreport.tasklet.MoveFile">
        <property name="outputFileDirectory"  value="${cost.report.bad.file.directory}" />
    </bean>


    <!--                         -->
    <!--        READER(s)        -->
    <!--                         -->

    <!-- Cost Report File Reader -->
    <bean id="costReportFileReader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
        <property name="resource"   value="file:#{jobExecutionContext['importFilePath']}" />
        <property name="lineMapper" ref="costReportLineMapper"/>
    </bean>

    <bean id="costReportLineMapper" class="org.springframework.batch.item.file.mapping.PatternMatchingCompositeLineMapper">
        <property name="tokenizers">
            <map>
                <entry key="FHDR*" value-ref="fileHeaderLineTokenizer"/>
                <entry key="AHDR*" value-ref="applicationHeaderLineTokenizer"/>
                <entry key="DETL*" value-ref="applicationDetailLineTokenizer"/>
                <entry key="ATRL*" value-ref="applicationTrailerLineTokenizer"/>
                <entry key="FTRL*" value-ref="fileTrailerLineTokenizer"/>
            </map>
        </property>
        <property name="fieldSetMappers">
            <map>
                <entry key="FHDR*" value-ref="fileHeaderFieldSetMapper"/>
                <entry key="AHDR*" value-ref="applicationHeaderFieldSetMapper"/>
                <entry key="DETL*" value-ref="applicationDetailFieldSetMapper"/>
                <entry key="ATRL*" value-ref="applicationTrailerFieldSetMapper"/>
                <entry key="FTRL*" value-ref="fileTrailerFieldSetMapper"/>
            </map>
        </property>
    </bean>

    <!-- file header -->
    <bean id="fileHeaderLineTokenizer" class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
        <property name="columns" value="1-4,5,6-15,16-23,24-31,32-110"/>
        <property name="names"   value="recordType,submitterType,submitterID,submitterDate,submitterTime,filler"/>
    </bean>

    <bean id="fileHeaderFieldSetMapper" class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
        <property name="prototypeBeanName"   value="fileHeader"/>
    </bean>

    <bean id="fileHeader" class="jwl.prp.retiree.costreport.entity.FileHeader" scope="prototype" />


    <!-- application header -->
    <bean id="applicationHeaderLineTokenizer" class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
        <property name="columns" value="1-4,5-14,15-110"/>
        <property name="names"   value="recordType,applicationID,filler"/>
    </bean>

    <bean id="applicationHeaderFieldSetMapper" class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
        <property name="prototypeBeanName"   value="applicationHeader"/>
    </bean>

    <bean id="applicationHeader" class="jwl.prp.retiree.costreport.entity.ApplicationHeader" scope="prototype" />


    <!-- application detail -->
    <bean id="applicationDetailLineTokenizer" class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
        <property name="columns" value="1-4,5-24,25-30,31-42,43-54,55-66,67-78,79-90,91-110"/>
        <property name="names"   value="recordType,uniqueBenefitOptionIdentifier,rxCostYearMonth,estimatedPremium,grossRetireeCost,thresholdReduction,limitReduction,estimatedCostAdjustment,filler"/>
    </bean>

    <bean id="applicationDetailFieldSetMapper" class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
        <property name="prototypeBeanName"   value="applicationDetail"/>
    </bean>

    <bean id="applicationDetail" class="jwl.prp.retiree.costreport.entity.ApplicationDetail" scope="prototype" />


    <!-- application trailer -->
    <bean id="applicationTrailerLineTokenizer" class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
        <property name="columns" value="1-4,5-14,15-21,22-36,37-51,52-66,67-81,82-96,97-110"/>
        <property name="names"   value="recordType,applicationID,recordCount,totalEstimatedPremium,totalGrossRetireeCost,totalThresholdReduction,totalLimitReduction,totalEstimatedCostAdjustment,filler"/>
    </bean>

    <bean id="applicationTrailerFieldSetMapper" class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
        <property name="prototypeBeanName"   value="applicationTrailer"/>
    </bean>

    <bean id="applicationTrailer" class="jwl.prp.retiree.costreport.entity.ApplicationTrailer" scope="prototype" />


    <!-- file trailer -->
    <bean id="fileTrailerLineTokenizer" class="org.springframework.batch.item.file.transform.FixedLengthTokenizer">
        <property name="columns" value="1-4,5-14,15-19,20-35,36-51,52-67,68-83,84-99,100-110"/>
        <property name="names"   value="recordType,submitterID,applicationCount,grabdEstimatedPremium,grandGrossRetireeCost,grandThresholdReduction,grandLimitReduction,grandEstimatedCostAdjustment,filler"/>
    </bean>

    <bean id="fileTrailerFieldSetMapper" class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
        <property name="prototypeBeanName"   value="fileTrailer"/>
    </bean>

    <bean id="fileTrailer" class="jwl.prp.retiree.costreport.entity.FileTrailer" scope="prototype" />


    <!--                            -->
    <!--        PROCESSER(s)        -->
    <!--                            -->

    <!-- Cost Report File Processor -->
    <bean id="costReportFileProcessor" class="jwl.prp.retiree.costreport.processor.CostReportFileProcessor" >

        <property name="rdsFileDAO"         ref="rdsFileDAO"/>
        <property name="fileErrDAO"         ref="fileErrDAO"/>

        <!-- file header Validator(s) -->
        <property name="fileHeaderValidators">
            <list>
                <ref bean="fileHeaderOutOfSequence"/>
                <ref bean="fileHeaderSubmitterTypeValid"/>
                <ref bean="fileHeaderSubmitterIDValid"/>
                <ref bean="fileHeaderDateFormatValid"/>
                <ref bean="fileHeaderDateNotFuture" />
                <ref bean="fileHeaderTimeFormatValid"/>
                <ref bean="incrementFileHeaderCounter"/>
            </list>
        </property>

        <!-- application header Validator(s) -->
        <property name="applicationHeaderValidators">
            <list>
                <ref bean="fileHeaderMissing"/>
                <ref bean="applicationHeaderOutOfSequence"/>
                <ref bean="incrementApplicationHeaderCounter"/>
            </list>
        </property>

        <!-- application detail Validator(s) -->
        <property name="applicationDetailValidators">
            <list>
                <ref bean="fileHeaderMissing"/>
                <ref bean="applicationDetailOutOfSequence"/>
                <ref bean="incrementApplicationRecordCount"/>
            </list>
        </property>

        <!-- application trailer Validator(s) -->
        <property name="applicationTrailerValidators">
            <list>
                <ref bean="fileHeaderMissing"/>
                <ref bean="applicationTrailerOutOfSequence"/>
                <ref bean="incrementApplicationCount"/>
            </list>
        </property>

        <!-- file trailer Validator(s) -->
        <property name="fileTrailerValidators">
            <list>
                <ref bean="fileHeaderMissing"/>
                <ref bean="fileTrailerOutOfSequence"/>
                <ref bean="fileTrailerSubmitterIDValid"/>
                <ref bean="applicationsExist"/>
                <ref bean="incrementFileTrailerCounter"/>
            </list>
        </property>

        <!-- Err Ref(s) NOT Error(s) -->
        <property name="errRefsNotErrors">
            <list value-type="jwl.prp.retiree.costreport.enums.ErrRef">
            </list>
        </property>
    </bean>

    <!-- Cost Report Application Processor -->
    <bean id="costReportApplicationProcessor" class="jwl.prp.retiree.costreport.processor.CostReportApplicationProcessor" >

        <property name="rdsFileDAO"    ref="rdsFileDAO"/>
        <property name="fileErrDAO"    ref="fileErrDAO"/>
        <property name="fileApplDAO"   ref="fileApplDAO"/>
        <property name="applErrDAO"    ref="applErrDAO"/>

        <!-- file header Validator(s) -->
        <property name="fileHeaderValidators">
            <list>
                <ref bean="setFileSubmitterID"/>
            </list>
        </property>

        <!-- application header Validator(s) -->
        <property name="applicationHeaderValidators">
            <list>
                <ref bean="setApplicationErrorSeqNum"/>
                <ref bean="applicationIDValid"/>
                <ref bean="applicationIDUniqueWithinFile"/>
                <ref bean="setApplicationHeaderVariables"/>
            </list>
        </property>

        <!-- application detail Validator(s) -->
        <property name="applicationDetailValidators">
            <list>
                <ref bean="uniqueBenefitOptionIdentifierCorrect"/>
                <ref bean="aplctnDetailDateFormatValid"/>
                <ref bean="aplctnDetailEstimatedPremiumNumeric"/>
                <ref bean="aplctnDetailGrossRetireeCountNumeric"/>
                <ref bean="aplctnDetailThresholdReductionNumeric"/>
                <ref bean="aplctnDetailLimitReductionNumeric"/>
                <ref bean="aplctnDetailEstimatedCostAdjustmentNumeric"/>
                <ref bean="incrementApplicationRecordCount"/>
            </list>
        </property>

        <!-- application trailer Validator(s) -->
        <property name="applicationTrailerValidators">
            <list>
                <ref bean="aplctnTrailerApplicationIDMatches"/>
                <ref bean="aplctnTrailerRecordCountCorrect"/>
                <ref bean="aplctnTrailerEstimatedPremiumCorrect"/>
                <ref bean="aplctnTrailerGrossRetireeCostCorrect"/>
                <ref bean="aplctnTrailerThresholdReductionCorrect"/>
                <ref bean="aplctnTrailerLimitReductionCorrect"/>
                <ref bean="aplctnTrailerEstimatedCostAdjustmentCorrect"/>
                <ref bean="incrementApplicationCount"/>
            </list>
        </property>

        <!-- file trailer Validator(s) -->
        <property name="fileTrailerValidators">
            <list>
                <!--
                <ref bean="fileTrailerApplicationCountCorrect"/>
                <ref bean="fileTrailerEstimatedPremiumCorrect"/>
                <ref bean="fileTrailerGrossRetireeCostCorrect"/>
                <ref bean="fileTrailerThresholdReductionCorrect"/>
                <ref bean="fileTrailerLimitReductionCorrect"/>
                <ref bean="fileTrailerEstimatedCostAdjustmentCorrect"/>
                -->
            </list>
        </property>

        <!-- Err Ref(s) NOT Error(s) -->
        <property name="errRefsNotErrors">
            <list value-type="jwl.prp.retiree.costreport.enums.ErrRef">
                <value>RX_GROUP_NUMBER_NOT_AN_ERR</value>
            </list>
        </property>
    </bean>


    <!--                         -->
    <!--        VALIDATOR(s)     -->
    <!--                         -->
    <bean id="firstValidator"                              class="jwl.prp.retiree.costreport.validation.TrueValidator"/>      <!--  NOT USED     -->
    <bean id="secondValidator"                             class="jwl.prp.retiree.costreport.validation.FalseValidator"/>     <!--  NOT USED     -->

    <!-- File Name Validator(s) -->
    <bean id="fileNameIsValid"                             class="jwl.prp.retiree.costreport.validation.file.name.FileNameIsValid"/>
    <bean id="fileNameSubmitterExists"                     class="jwl.prp.retiree.costreport.validation.file.name.FileNameSubmitterExists">
        <property name="rdsOrgDAO"  ref="rdsOrgDAO"/>
    </bean>

    <!-- File Header Validator(s) -->
    <bean id="fileHeaderMissing"                           class="jwl.prp.retiree.costreport.validation.file.header.FileHeaderMissing"/>
    <bean id="fileHeaderOutOfSequence"                     class="jwl.prp.retiree.costreport.validation.file.header.FileHeaderOutOfSequence"/>
    <bean id="fileHeaderSubmitterTypeValid"                class="jwl.prp.retiree.costreport.validation.file.header.FileHeaderSubmitterTypeValid"/>
    <bean id="fileHeaderSubmitterIDValid"                  class="jwl.prp.retiree.costreport.validation.file.header.FileHeaderSubmitterIDValid"/>
    <bean id="setFileSubmitterID"                          class="jwl.prp.retiree.costreport.validation.file.header.SetFileSubmitterID"/>
    <bean id="fileHeaderDateFormatValid"                   class="jwl.prp.retiree.costreport.validation.file.header.FileHeaderDateFormatValid"/>
    <bean id="fileHeaderDateNotFuture"                     class="jwl.prp.retiree.costreport.validation.file.header.FileHeaderDateNotFuture"/>
    <bean id="fileHeaderTimeFormatValid"                   class="jwl.prp.retiree.costreport.validation.file.header.FileHeaderTimeFormatValid"/>
    <bean id="incrementFileHeaderCounter"                  class="jwl.prp.retiree.costreport.validation.file.header.IncrementFileHeaderCounter"/>

    <!-- Application Header Validator(s) -->
    <bean id="applicationHeaderOutOfSequence"              class="jwl.prp.retiree.costreport.validation.application.header.ApplicationHeaderOutOfSequence"/>
    <bean id="setApplicationErrorSeqNum"                   class="jwl.prp.retiree.costreport.validation.application.header.SetApplicationErrorSeqNum"/>
    <bean id="applicationIDValid"                          class="jwl.prp.retiree.costreport.validation.application.header.ApplicationIDValid">
        <property name="applicationDAO"  ref="applicationDAO"/>
    </bean>
    <bean id="applicationIDUniqueWithinFile"               class="jwl.prp.retiree.costreport.validation.application.header.ApplicationIDUniqueWithinFile"/>
    <bean id="incrementApplicationHeaderCounter"           class="jwl.prp.retiree.costreport.validation.application.header.IncrementApplicationHeaderCounter"/>
    <bean id="setApplicationHeaderVariables"               class="jwl.prp.retiree.costreport.validation.application.header.SetApplicationHeaderVariables"/>

    <!-- Application Detail Validator(s) -->
    <bean id="applicationDetailOutOfSequence"              class="jwl.prp.retiree.costreport.validation.application.detail.ApplicationDetailOutOfSequence"/>
    <bean id="uniqueBenefitOptionIdentifierCorrect"        class="jwl.prp.retiree.costreport.validation.application.detail.UniqueBenefitOptionIdentifierCorrect">
        <property name="planOptionsDAO"  ref="planOptionsDAO"/>
    </bean>
    <bean id="aplctnDetailDateFormatValid"                 class="jwl.prp.retiree.costreport.validation.application.detail.RXCostYearMonthFormatValid"/>
    <bean id="aplctnDetailEstimatedPremiumNumeric"         class="jwl.prp.retiree.costreport.validation.application.detail.EstimatedPremiumNumeric"/>
    <bean id="aplctnDetailGrossRetireeCountNumeric"        class="jwl.prp.retiree.costreport.validation.application.detail.GrossRetireeCostNumeric"/>
    <bean id="aplctnDetailThresholdReductionNumeric"       class="jwl.prp.retiree.costreport.validation.application.detail.ThresholdReductionNumeric"/>
    <bean id="aplctnDetailLimitReductionNumeric"           class="jwl.prp.retiree.costreport.validation.application.detail.LimitReductionNumeric"/>
    <bean id="aplctnDetailEstimatedCostAdjustmentNumeric"  class="jwl.prp.retiree.costreport.validation.application.detail.EstimatedCostAdjustmentNumeric"/>
    <bean id="incrementApplicationRecordCount"             class="jwl.prp.retiree.costreport.validation.application.detail.IncrementApplicationRecordCount"/>

    <!-- Application Trailer Validator(s) -->
    <bean id="applicationTrailerOutOfSequence"             class="jwl.prp.retiree.costreport.validation.application.trailer.ApplicationTrailerOutOfSequence"/>
    <bean id="aplctnTrailerApplicationIDMatches"           class="jwl.prp.retiree.costreport.validation.application.trailer.ApplicationIDMatchesApplicationHeader"/>
    <bean id="aplctnTrailerRecordCountCorrect"             class="jwl.prp.retiree.costreport.validation.application.trailer.RecordCountCorrect"/>
    <bean id="aplctnTrailerEstimatedPremiumCorrect"        class="jwl.prp.retiree.costreport.validation.application.trailer.EstimatedPremiumCorrect"/>
    <bean id="aplctnTrailerGrossRetireeCostCorrect"        class="jwl.prp.retiree.costreport.validation.application.trailer.GrossRetireeCostCorrect"/>
    <bean id="aplctnTrailerThresholdReductionCorrect"      class="jwl.prp.retiree.costreport.validation.application.trailer.ThresholdReductionCorrect" />
    <bean id="aplctnTrailerLimitReductionCorrect"          class="jwl.prp.retiree.costreport.validation.application.trailer.LimitReductionCorrect"/>
    <bean id="aplctnTrailerEstimatedCostAdjustmentCorrect" class="jwl.prp.retiree.costreport.validation.application.trailer.EstimatedCostAdjustmentCorrect"/>
    <bean id="incrementApplicationCount"                   class="jwl.prp.retiree.costreport.validation.application.trailer.IncrementApplicationCount"/>

    <!-- File Trailer Validator(s) -->
    <bean id="fileTrailerOutOfSequence"                    class="jwl.prp.retiree.costreport.validation.file.trailer.FileTrailerOutOfSequence"/>
    <bean id="fileTrailerSubmitterIDValid"                 class="jwl.prp.retiree.costreport.validation.file.trailer.FileTrailerSubmitterIDValid"/>
    <bean id="applicationsExist"                           class="jwl.prp.retiree.costreport.validation.file.trailer.ApplicationsExist"/>
    <bean id="fileTrailerApplicationCountCorrect"          class="jwl.prp.retiree.costreport.validation.file.trailer.ApplicationCountCorrect"/>
    <bean id="fileTrailerEstimatedPremiumCorrect"          class="jwl.prp.retiree.costreport.validation.file.trailer.EstimatedPremiumCorrect"/>
    <bean id="fileTrailerGrossRetireeCostCorrect"          class="jwl.prp.retiree.costreport.validation.file.trailer.GrossRetireeCostCorrect"/>
    <bean id="fileTrailerThresholdReductionCorrect"        class="jwl.prp.retiree.costreport.validation.file.trailer.ThresholdReductionCorrect"/>
    <bean id="fileTrailerLimitReductionCorrect"            class="jwl.prp.retiree.costreport.validation.file.trailer.LimitReductionCorrect"/>
    <bean id="fileTrailerEstimatedCostAdjustmentCorrect"   class="jwl.prp.retiree.costreport.validation.file.trailer.EstimatedCostAdjustmentCorrect"/>
    <bean id="incrementFileTrailerCounter"                 class="jwl.prp.retiree.costreport.validation.file.trailer.IncrementFileTrailerCounter"/>


    <!--                         -->
    <!--        WRITER(s)        -->
    <!--                         -->

    <!-- Cost Report Item Writer -->
    <bean id="costReportItemWriter" class="jwl.prp.retiree.costreport.writer.CostReportItemWriter"/>

    <!-- Dummy Item Writer -->
    <bean id="dummyItemWriter" class="jwl.prp.retiree.costreport.writer.DummyItemWriter"/>

    <!-- Database Item Writer -->
    <bean id="databaseItemWriter" class="jwl.prp.retiree.costreport.writer.DatabaseItemWriter">
        <property name="costReportImportDAO"         ref="costReportImportDAO"/>
    </bean>


    <!--                         -->
    <!--        LISTENER(s)      -->
    <!--                         -->

    <!-- File Exists PromotionListener -->
    <bean id="fileExistsPromotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
        <property name="keys" value="rdsFileId" />
    </bean>

    <!-- File Name Valid PromotionListener -->
    <bean id="fileNameValidPromotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
        <property name="keys" value="fileNameSubmitterType, fileNameSubmitterID" />
    </bean>

    <!-- Import file Listener -->
    <bean id="importFileListener" class="jwl.prp.retiree.costreport.listener.ImportFileListener" scope="step">
        <property name="inputFilePath" value="#{jobParameters['inputFilePath']}" />
    </bean>


    <!--                          -->
    <!--          DAO(s)          -->
    <!--                          -->
    <bean id="costReportFileDAO" class="jwl.prp.retiree.costreport.dao.CostReportFileDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="costReportFileProcessDAO" class="jwl.prp.retiree.costreport.dao.CostReportFileProcessDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="rdsFileDAO" class="jwl.prp.retiree.costreport.dao.RDSFileDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="fileErrDAO" class="jwl.prp.retiree.costreport.dao.FileErrDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="rdsOrgDAO" class="jwl.prp.retiree.costreport.dao.RdsOrgDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="applicationDAO" class="jwl.prp.retiree.costreport.dao.ApplicationDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="planOptionsDAO" class="jwl.prp.retiree.costreport.dao.PlanOptionsDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="fileApplDAO" class="jwl.prp.retiree.costreport.dao.FileApplDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="applErrDAO" class="jwl.prp.retiree.costreport.dao.ApplErrDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="costReportImportDAO" class="jwl.prp.retiree.costreport.dao.CostReportImportDAO">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>
</beans>